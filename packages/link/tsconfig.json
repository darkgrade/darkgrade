{
    "extends": "@darkgrade/typescript-config/library.json",
    "compilerOptions": {
        "lib": ["ES2022", "DOM"],
        "jsx": "react-jsx",
        "types": ["w3c-web-usb"],
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@camera/*": ["src/camera/*"],
            "@core/*": ["src/core/*"],
            "@transport/*": ["src/transport/*"],
            "@constants/*": ["src/constants/*"],
            "@api/*": ["src/api/*"],
            "@factories/*": ["src/factories/*"],
            "@ptp/*": ["src/ptp/*"]
        }
    },
    "include": ["src", "tests", "*.config.ts"]
}
